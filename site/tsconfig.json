{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "module": "es2015",
    "moduleResolution": "node",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "typeRoots": ["node_modules/@types"],
    "outDir": "./tsc-out"
  },
  "exclude": ["node_modules", "dist"]
}
